
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="width=device-width, initial-scale=1.0">*@
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/LoginStyle")

</head>
<body id="LoginForm">

<div class="container">
    <h1 class="form-heading"></h1>
    <div class="login-form">
        <div class="main-div">
            <div class="panel">
                <h2>Admin Login</h2>
                <p>Please enter your email and password</p>
            </div>
            <form id="Login" method="post" action="/SharePoint/Login">

                <div class="form-group">


                    <input type="email" class="form-control" id="inputEmail" placeholder="Email Address" name="email" onkeyup="emailCheck()">

                </div>

                <div class="form-group">

                    <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password" onkeyup="emailCheck()">

                </div>

                <button id="loginBtn" disabled="disabled" type="submit" class="btn btn-primary">Login</button>

            </form>

            

        </div>
        <p class="botto-text">@ViewBag.LoginTxt</p>
    </div>
</div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/LoginScript")

</body>
</html>
